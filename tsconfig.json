{
  "compilerOptions": {
    "target": "ES6", // Target ECMAScript 6
    "module": "commonjs", // CommonJS modules
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Interoperability between ESModules and CommonJS
    "skipLibCheck": true, // Skip type checking of declaration files
    "outDir": "dist", // Output directory for compiled files
    "baseUrl": ".", // Base URL for module resolution
    "paths": {
      "prisma-zod-schemas/*": ["prisma-zod-schemas/*"] // Path alias for dynamic schemas
    },
    "typeRoots": ["./node_modules/@types", "./prisma-zod-schemas"] // Include custom types
  },
  "include": ["src/**/*", "tests/**/*"], // Include source and test files
  "exclude": ["node_modules", "dist"] // Exclude node_modules and output directory
}
